<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAECE1"
    android:layout_margin="20dp"
    tools:context=".EspMedicas">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especificaciones sobre el niño"
        android:textColor="#CC3300"
        android:layout_gravity="center"
        android:textSize="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por confiar en nosotros"
        android:translationX="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Diágnostico"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/fechadiag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condiciones Médicas"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/masenfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Alguna enfermedad Adicional"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tratamientos Médicos"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/enlugarde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Menciona los tratamientos clinicos de tu hijo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alergias"
        android:textSize="20dp"/>
    <Spinner
        android:id="@+id/spinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regsitro de Visitas"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/revision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cuantas veces ha ido a revisión"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Medicamentos"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/listmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cuantas veces ha ido a revisión"
        />

    <Button
        android:id="@+id/btnesp"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#6699FF"
        android:text="RegistrarDatos"
        android:translationY="50dp" />






</LinearLayout>